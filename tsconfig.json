{
  "compilerOptions": {
    "baseUrl": "./src",
    /* Language and Environment */
    "target": "ES2017",
    "resolveJsonModule": true,
    /* Modules */
    "module": "commonjs",
    // "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src"],
}